    <!-- ********************** Dialog style ********************** -->
    <style name="Dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowBackground">@color/translucent</item>
		<item name="android:windowNoTitle">true</item>
	</style>
	
	<style name="Dialog.Animation">
		<item name="android:windowEnterAnimation">@anim/dialog_enter</item>
		<item name="android:windowExitAnimation">@anim/dialog_exit</item>
	</style>
	
	
	<!-- ********************** Window ********************** -->
	<style name="Theme" parent="android:style/Theme">
	</style>
	
	<style name="Theme.NoTitleBar" parent="android:style/Theme.NoTitleBar">
		<item name="android:windowBackground">@color/translucent</item>
	</style>
	
	<style name="Theme.NoTitleBar.Translucent">
		<item name="android:windowBackground">@color/translucent</item>
	</style>
	
	
	<!-- ********************** iTable style ********************** -->
    <style name="ITableCategory" parent="FontNormal.Gray.Shadow">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/pref_category</item>
	</style>

    <style name="ITable">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:focusable">false</item>
		<item name="android:clickable">false</item>        
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/height_itable_min</item>
        <item name="android:paddingLeft">@dimen/edge_large</item>
        <item name="android:paddingRight">@dimen/edge_large</item>
        <item name="android:paddingTop">@dimen/edge_small</item>
        <item name="android:paddingBottom">@dimen/edge_small</item>
	</style>
	
    <style name="ITable.First">
        <item name="android:background">@drawable/selector_pref_first</item>
	</style>
	
    <style name="ITable.Middle">
        <item name="android:background">@drawable/selector_pref_middle</item>
	</style>
	
    <style name="ITable.Last">
        <item name="android:background">@drawable/selector_pref_last</item>
	</style>
	
    <style name="ITable.Single">
        <item name="android:background">@drawable/selector_pref_single</item>
	</style>
	
	<!-- ********************** iTable item ********************** -->
	<style name="ITableItemTitle" parent="FontNormal.Black">
		<item name="android:layout_width">80dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">0</item>
        <item name="android:layout_marginRight">@dimen/edge_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
	</style>
	
	<style name="ITableItemSummary" parent="FontSmall.Gray">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
	</style>
	
	<style name="ITableItemTitle.Right">
		<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
	</style>
	
	<style name="ITableItemSummary.Right">
        <item name="android:gravity">right</item>
	</style>
	
	
	<!-- ********************** Button ********************** -->
	<style name="Button" parent="FontNormal.White">
		<item name="android:background">@drawable/selector_btn_default</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="Button.Black">
		<item name="android:background">@drawable/selector_btn_black</item>
	</style>
	
	<style name="Button.Green">
		<item name="android:background">@drawable/selector_btn_green</item>
	</style>
	
	<style name="Button.Gray">
		<item name="android:background">@drawable/selector_btn_gray</item>
		<item name="android:textColor">@color/black</item>
	</style>
	
	<style name="Button.Back">
		<item name="android:background">@drawable/selector_btn_back_black</item>
	</style>
	
	<!-- Small -->
	<style name="Button.Small">
		<item name="android:textSize">@dimen/font_small</item>
	</style>

	<style name="Button.Small.Black">
		<item name="android:background">@drawable/selector_btn_black</item>
	</style>
	
	<style name="Button.Small.Green">
		<item name="android:background">@drawable/selector_btn_green</item>
	</style>
	
	<style name="Button.Small.Gray">
		<item name="android:background">@drawable/selector_btn_gray</item>
		<item name="android:textColor">@color/black</item>
	</style>
	
	<style name="Button.Small.Back">
		<item name="android:background">@drawable/selector_btn_back_black</item>
	</style>
	
	<!-- ********************** EditText ********************** -->
	<style name="Edit" parent="FontSmall.Gray">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minHeight">@dimen/height_edit_min</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/edge_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/selector_edit_default</item>
        <item name="android:gravity">center_vertical</item>
	</style>

	<!-- ********************** Edit Area ********************** -->
	<style name="Edit.Area">
		<item name="android:singleLine">false</item>
		<item name="android:gravity">left</item>
	</style>
	
	
	<!-- ********************** Dropdown ********************** -->
	<style name="Spinner" parent="FontSmall.Gray">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minHeight">@dimen/height_edit_min</item>
        <item name="android:prompt">@string/label_choose</item>
        <item name="android:background">@drawable/selector_dropdown</item>
        <item name="android:gravity">center_vertical</item>
	</style>
	
	
	<!-- ********************** Checkbox ********************** -->
	<style name="Checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:button">@drawable/selector_checkbox</item>
		<item name="android:padding">1dip</item>
		<item name="android:layout_margin">1dip</item>
	</style>
	

	<!-- ********************** Radio ********************** -->
	<style name="Radio" parent="FontSmall.Gray">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:button">@drawable/selector_radio</item>
		<item name="android:background">@drawable/radio_label_background</item>
	</style>
	

	<!-- ********************** Date ********************** -->
	<style name="Date" parent="FontSmall.Gray">
		<item name="android:layout_width">@dimen/width_date</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minHeight">@dimen/height_edit_min</item>
        <item name="android:background">@drawable/selector_edit_default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
	</style>
	
	
	<!-- ********************** List ********************** -->
	<style name="List">
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:divider">@null</item>
	</style>
	
	<!-- iTable list -->
	<style name="List.iTable">
        <item name="android:dividerHeight">0dip</item>
        <item name="android:divider">@null</item>
	</style>
	
	<style name="ListTitle" parent="FontNormal.Black">
        <item name="android:singleLine">true</item>
	</style>
	
	<style name="ListSummary" parent="FontSuperSmall.Gray">
		<item name="android:singleLine">true</item>
	</style>
	
	<!-- List item -->
	<style name="ListItem">
        <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:padding">@dimen/edge_small</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
		<item name="android:background">@drawable/selector_list</item>
	</style>
	
</resources>
